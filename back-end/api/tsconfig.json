{
    "compilerOptions": {
      "target": "ES6",
      "module": "commonjs",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "outDir": "./dist",
      "rootDir": "./src",
      "resolveJsonModule": true,
      "typeRoots": ["node_modules/@types","src/types"],
      "types": ["node", "express"],
      "allowJs": true,
    },
    "include": [
      "src/**/*.ts",
      "src/**/*",
      "src/**/*.d.ts"
    ],
    "exclude": ["node_modules"],
    "files": [
    "src/types/express.d.ts"
  ]
  }
  